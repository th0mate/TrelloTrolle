{% extends "base.html.twig" %}

{% block page_title %}Troll√©{% endblock %}

{% block page_content %}

    <div>
        <h3>Mes tableaux ({{ tableaux|length }})</h3>
        <div class="tableaux">
            {% for tableau in tableaux %}

            <div class="ligne_tableau">
                <div>{{ tableau.titreTableau }}</div>
                <div>
                    <a href="{{ route('afficherTableau', {codeTableau : tableau.codeTableau}) }}">
                        Modifier
                    </a>
                </div>
                <div>
                    {% if tableau.utilisateur.login == connexionUtilisateur.loginUtilisateurConnecte %}
                    <a href="{{ route('supprimerTableau', {idTableau : tableau.idTableau}) }}">Supprimer le tableau</a>
                    {% else %}
                    <a href="{{ route('quitterTableau', {idTableau : tableau.idTableau}) }}">Quitter le tableau</a>
                    {% endif %}
                </div>
            </div>

            {%endfor%}

        </div>
        <div>
            <a href='{{route('afficherFormulaireCreationTableau')}}'>Ajouter un tableau</a>
        </div>
    </div>

{% endblock %}